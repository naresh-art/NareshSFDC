<apex:page standardController="Account">
    <apex:form >
         <apex:pageBlock title="Create account record">
             <apex:pageBlockButtons >
                  <apex:commandButton value="Save" action="{!save}"/>
             </apex:pageBlockButtons>
             <apex:pageBlockSection title="Account Information"><br/>
                  <apex:inputField value="{!Account.Name}"/><br/>
                  <apex:inputField value="{!Account.Type}"/><br/>
                  <apex:inputField value="{!Account.Industry}"/><br/>
                  <apex:inputField value="{!Account.AnnualRevenue}"/><br/>
                  <apex:inputField value="{!Account.Rating}"/>
             </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>    
</apex:page>
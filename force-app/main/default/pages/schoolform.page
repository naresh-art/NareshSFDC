<apex:page controller="schoolform">
    <apex:form >
        <apex:pageMessages />
        <apex:pageBlock title="Employee Information" >
            <apex:pageBlockButtons >
                 <apex:commandButton value="submit" action="{!submit}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection columns="1">
               <apex:pageBlockSectionItem >
                   <apex:outputLabel value="Enter empname"></apex:outputLabel>
                   <apex:inputText value="{!empname}"/>
                </apex:pageBlockSectionItem>
                 <apex:pageBlockSectionItem >
                   <apex:outputLabel value="Enter empage"></apex:outputLabel>
                   <apex:inputText value="{!empage}"/>
                </apex:pageBlockSectionItem>
                 <apex:pageBlockSectionItem >
                   <apex:outputLabel value="Enter empphone"></apex:outputLabel>
                   <apex:inputText value="{!empphone}"/>
                </apex:pageBlockSectionItem>
                 <apex:pageBlockSectionItem >
                   <apex:outputLabel value="Enter empemail"></apex:outputLabel>
                   <apex:inputText value="{!empemail}"/>
                </apex:pageBlockSectionItem>
                 <apex:pageBlockSectionItem >
                   <apex:outputLabel value="Enter empaddress"></apex:outputLabel>
                   <apex:inputText value="{!empaddr}"/>
                </apex:pageBlockSectionItem>
                 <apex:pageBlockSectionItem >
                   <apex:outputLabel value="Enter empsal"></apex:outputLabel>
                   <apex:inputText value="{!empsal}"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
          </apex:pageBlock>        
    </apex:form>
</apex:page>